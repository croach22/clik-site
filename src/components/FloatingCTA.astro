<!-- Floating mobile CTA â€” appears after scrolling past the hero -->
<div
  id="floating-cta"
  class="fixed bottom-6 right-6 z-40 md:hidden translate-y-20 opacity-0 transition-all duration-300"
>
  <a
    href="https://app.clik.vision/sign-up"
    class="group relative flex items-center gap-2 overflow-hidden rounded-full bg-brand-cream px-5 py-3 text-sm font-semibold text-zinc-950 shadow-lg shadow-black/30"
  >
    <span
      class="absolute inset-0 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
      style="background: linear-gradient(135deg, #F9838E, #DC1DD9, #5481E8)"
    />
    <span class="relative">Start for Free</span>
  </a>
</div>

<script>
  const floatingCTA = document.getElementById('floating-cta');
  let shown = false;

  function checkScroll() {
    const scrollY = window.scrollY;
    const threshold = window.innerHeight * 0.6;

    if (scrollY > threshold && !shown) {
      shown = true;
      floatingCTA?.classList.remove('translate-y-20', 'opacity-0');
      floatingCTA?.classList.add('translate-y-0', 'opacity-100');
    } else if (scrollY <= threshold && shown) {
      shown = false;
      floatingCTA?.classList.add('translate-y-20', 'opacity-0');
      floatingCTA?.classList.remove('translate-y-0', 'opacity-100');
    }
  }

  window.addEventListener('scroll', checkScroll, { passive: true });
</script>
