---
const navLinks = [
  { label: 'How it works', href: '/#how-it-works' },
  { label: 'Blog',         href: '/blog'           },
  { label: 'Docs',         href: '/docs'           },
];

const useCases = [
  { label: 'Cooking',      href: '/use-cases/cooking',      emoji: 'üç≥' },
  { label: 'GRWM',         href: '/use-cases/grwm',         emoji: 'üíÑ' },
  { label: 'Talking Head', href: '/use-cases/talking-head', emoji: 'üéôÔ∏è' },
  { label: 'Vlogs',        href: '/use-cases/vlogs',         emoji: 'üéí' },
  { label: 'DIY',          href: '/use-cases/diy',           emoji: 'üî®' },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 border-b border-white/5 bg-brand-bg/80 backdrop-blur-md">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">

    <a href="/" class="flex items-center">
      <img src="/logo-white.svg" alt="Clik" class="h-7 w-auto" />
    </a>

    <div class="hidden items-center gap-8 md:flex">

      {navLinks.map((link) => (
        <a
          href={link.href}
          class="text-sm text-brand-cream/60 transition-colors hover:text-brand-cream"
        >
          {link.label}
        </a>
      ))}

      {/* Use Cases ‚Äî hover dropdown */}
      <div class="use-cases-trigger group relative">
        <button
          class="flex items-center gap-1.5 text-sm text-brand-cream/60 transition-colors hover:text-brand-cream group-hover:text-brand-cream"
          aria-haspopup="true"
        >
          Use Cases
          <svg
            class="chevron h-3 w-3 transition-transform duration-300 ease-out"
            viewBox="0 0 12 12"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path d="M2 4L6 8L10 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>

        {/* Invisible bridge ‚Äî keeps hover alive as mouse travels to dropdown */}
        <div class="absolute left-1/2 top-full h-3 w-40 -translate-x-1/2" />

        {/* Dropdown panel */}
        <div class="dropdown absolute left-1/2 top-[calc(100%+12px)] w-52 -translate-x-1/2">
          <div class="overflow-hidden rounded-2xl border border-white/10 bg-[#0f0d14]/95 shadow-2xl shadow-black/60 backdrop-blur-xl">
            <div class="p-1.5">
              {useCases.map((uc) => (
                <a
                  href={uc.href}
                  class="nav-dropdown-item flex items-center gap-3 rounded-xl px-3 py-2.5 text-sm text-brand-cream/55 transition-colors hover:bg-white/5 hover:text-brand-cream"
                >
                  <span class="text-base leading-none">{uc.emoji}</span>
                  {uc.label}
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>

    </div>

    <a
      href="https://app.clik.vision/sign-up"
      class="group relative overflow-hidden rounded-full bg-brand-cream px-4 py-2 text-sm font-semibold text-zinc-950 transition-all hover:scale-105 hover:text-white"
    >
      <span class="absolute inset-0 opacity-0 transition-opacity duration-300 group-hover:opacity-100" style="background: linear-gradient(135deg, #F9838E, #DC1DD9, #5481E8)" />
      <span class="relative">Start Free</span>
    </a>
  </div>
</nav>

<style>
  /* Dropdown hidden state */
  .dropdown {
    opacity: 0;
    transform: translateX(-50%) translateY(-6px);
    pointer-events: none;
    transition:
      opacity 0.2s ease-out,
      transform 0.2s ease-out;
  }

  /* Dropdown visible on hover */
  .use-cases-trigger:hover .dropdown {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
    pointer-events: auto;
  }

  /* Chevron rotates on hover */
  .use-cases-trigger:hover .chevron {
    transform: rotate(180deg);
  }

  /* Stagger dropdown items in */
  .use-cases-trigger:hover .nav-dropdown-item:nth-child(1) { animation: dropItem 0.18s ease-out 0.00s both; }
  .use-cases-trigger:hover .nav-dropdown-item:nth-child(2) { animation: dropItem 0.18s ease-out 0.04s both; }
  .use-cases-trigger:hover .nav-dropdown-item:nth-child(3) { animation: dropItem 0.18s ease-out 0.08s both; }
  .use-cases-trigger:hover .nav-dropdown-item:nth-child(4) { animation: dropItem 0.18s ease-out 0.12s both; }
  .use-cases-trigger:hover .nav-dropdown-item:nth-child(5) { animation: dropItem 0.18s ease-out 0.16s both; }

  @keyframes dropItem {
    from { opacity: 0; transform: translateY(-4px); }
    to   { opacity: 1; transform: translateY(0); }
  }
</style>
