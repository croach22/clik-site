---
import BaseLayout from './BaseLayout.astro';
import CTASection from '../components/CTASection.astro';

interface Props {
  title: string;
  description: string;
  emoji: string;
  heroHeadline: string;
  heroSubhead: string;
  howItHelps: { title: string; description: string }[];
  features: { title: string; description: string; icon: string }[];
}

const { title, description, emoji, heroHeadline, heroSubhead, howItHelps, features } = Astro.props;
---

<BaseLayout title={`${title} — Clik`} description={description}>
  <!-- Hero -->
  <section class="relative flex min-h-[70vh] flex-col items-center justify-center px-6 pb-16 pt-24 text-center">
    <div class="pointer-events-none absolute inset-0 overflow-hidden">
      <div class="absolute left-1/2 top-1/2 h-[500px] w-[500px] -translate-x-1/2 -translate-y-1/2 rounded-full bg-violet-600/10 blur-[120px]"></div>
    </div>

    <div class="relative mx-auto max-w-4xl">
      <div class="mb-6 text-5xl">{emoji}</div>
      <h1 class="mb-6 text-5xl font-bold leading-[1.1] tracking-tight text-white md:text-6xl">
        {heroHeadline}
      </h1>
      <p class="mx-auto mb-10 max-w-xl text-lg text-zinc-400 md:text-xl">
        {heroSubhead}
      </p>
      <a
        href="https://app.clik.vision/sign-up"
        class="inline-block rounded-full bg-white px-8 py-3.5 text-base font-semibold text-zinc-950 transition-opacity hover:opacity-90"
      >
        Start for Free
      </a>
    </div>
  </section>

  <!-- How Clik helps this format -->
  <section class="border-y border-white/5 bg-zinc-900/50 px-6 py-24">
    <div class="mx-auto max-w-6xl">
      <div class="mb-16 text-center">
        <p class="mb-3 text-sm font-semibold uppercase tracking-widest text-violet-400">How it works</p>
        <h2 class="text-4xl font-bold text-white md:text-5xl">
          Built for how you create.
        </h2>
      </div>

      <div class="grid gap-6 md:grid-cols-3">
        {howItHelps.map((item, i) => (
          <div class="rounded-2xl border border-white/8 bg-zinc-900 p-6">
            <div class="mb-3 text-2xl font-bold text-violet-400/40">0{i + 1}</div>
            <h3 class="mb-2 text-lg font-semibold text-white">{item.title}</h3>
            <p class="text-sm leading-relaxed text-zinc-400">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="px-6 py-24">
    <div class="mx-auto max-w-6xl">
      <div class="mb-16 text-center">
        <p class="mb-3 text-sm font-semibold uppercase tracking-widest text-violet-400">Features</p>
        <h2 class="text-4xl font-bold text-white md:text-5xl">
          Everything you need,<br class="hidden md:block" />
          nothing you don't.
        </h2>
      </div>

      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {features.map((f) => (
          <div class="rounded-2xl border border-white/8 bg-zinc-900 p-6">
            <div class="mb-3 text-2xl">{f.icon}</div>
            <h3 class="mb-2 font-semibold text-white">{f.title}</h3>
            <p class="text-sm leading-relaxed text-zinc-400">{f.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Other use cases -->
  <section class="border-t border-white/5 bg-zinc-900/30 px-6 py-16">
    <div class="mx-auto max-w-6xl text-center">
      <p class="mb-6 text-zinc-400">Clik works for more than just {title.toLowerCase()}.</p>
      <a href="/#use-cases" class="text-sm font-medium text-violet-400 transition-colors hover:text-violet-300">
        See all use cases →
      </a>
    </div>
  </section>

  <CTASection />
</BaseLayout>
